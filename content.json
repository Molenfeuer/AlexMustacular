{
  "Format": "2.8.0",
  "ConfigSchema": {
    "EnabledSetting": {
      "AllowValues": "true, false",
      "Default": true
    },
    "SeasonalOutfitsSetting": {
      "AllowValues": "disabled, enabled, auto, spring, summer, fall, winter",
      "Default": "auto",
      "Section": "appearance"
    },
    "ExtraFestivalOutfitSetting": {
      "AllowValues": "disabled, enabled, auto",
      "Default": "auto",
      "Section": "appearance"
    }
  },
  "DynamicTokens": [
    {
      "Name": "OutfitType",
      "Value": "fall"
    },
    {
      "Name": "OutfitType",
      "Value": "spring",
      "When": {
        "SeasonalOutfitsSetting": "spring"
      }
    },
    {
      "Name": "OutfitType",
      "Value": "summer",
      "When": {
        "SeasonalOutfitsSetting": "summer"
      }
    },
    {
      "Name": "OutfitType",
      "Value": "winter",
      "When": {
        "SeasonalOutfitsSetting": "winter"
      }
    },
    {
      "Name": "OutfitType",
      "Value": "{{season}}",
      "When": {
        "SeasonalOutfitsSetting": "enabled"
      }
    },
    {
      "Name": "OutfitType",
      "Value": "{{season}}",
      "When": {
        "SeasonalOutfitsSetting": "auto",
        "HasMod": "Poltergeister.SeasonalCuteCharacters"
      }
    },
    {
      "Name": "ExtraFestivalOutfitEnabled",
      "Value": "false"
    },
    {
      "Name": "ExtraFestivalOutfitEnabled",
      "Value": "true",
      "When": {
        "ExtraFestivalOutfitSetting": "enabled"
      }
    },
    {
      "Name": "ExtraFestivalOutfitEnabled",
      "Value": "true",
      "When": {
        "ExtraFestivalOutfitSetting": "auto",
        "HasMod": "Poltergeister.SeasonalCuteCharacters"
      }
    }
  ],
  "Changes": [
    {
      "Action": "Include",
      "FromFile": "data/body.json",
      "When": {
        "EnabledSetting": true
      }
    },
    {
      "Action": "Include",
      "FromFile": "data/outfit.json",
      "When": {
        "EnabledSetting": true
      }
    },
    {
      "Action": "Include",
      "FromFile": "data/outfit_festival.json",
      "When": {
        "EnabledSetting": true,
        "ExtraFestivalOutfitEnabled": true
      }
    }
  ]
}
